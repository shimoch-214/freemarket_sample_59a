.user-address__form
  .user-address__form--name
    = a.label :last_name, "お名前", class:"name"
    %span.form-require 必須
    =a.text_field :last_name, class:"input-last-name", placeholder:"例) 山田" 
    =a.text_field :first_name, class:"input-first-name", placeholder:"例) 彩" 
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :first_name}
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :last_name}
  .user-address__form--name-kana
    = a.label :last_name_kana,"お名前カナ", class:"name-kana"
    %span.form-require 必須
    =a.text_field :last_name_kana, class:"input-last-name-kana", placeholder:"例) ヤマダ" 
    =a.text_field :first_name_kana, class:"input-first-name-kana", placeholder:"例) アヤ" 
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :first_name_kana }
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :last_name_kana }
  .user-address__form--zip-code
    = a.label :zip_code, "郵便番号", class:"zip-code"
    %span.form-require 必須
    =a.text_field :zip_code, class:"input-zip-code", placeholder:"例) 123-4567" 
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :zip_code }
  .user-address__form--prefectures
    = a.label :prefecture, "都道府県", class:"prefectures"
    %span.form-require 必須
    = a.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: ""}, {class: "input-Prefectures"}
    = image_tag "arrow-bottom.png", size: "16x10",class:"arrow-bottom-icon4"
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :prefecture_id }
  .user-address__form--city
    = a.label :city, "市区町村", class:"city"
    %span.form-require 必須
    =a.text_field :city, class:"input-city", placeholder:"例) 横浜市緑区" 
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :city }
  .user-address__form--street-number
    = a.label :street, "番地", class:"street-number"
    %span.form-require 必須
    =a.text_field :street, class:"input-street-number", placeholder:"例) 青山1−1−1" 
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :street }
  .user-address__form--building
    = a.label :building, "建物名", class:"building"
    %span.form-arbitrary 任意
    =a.text_field :building, class:"input-building", placeholder:"例) 柳ビル103" 
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :building }
  .user-address__form--phone-number
    = a.label :phone_number_sub, "電話", class:"phone-number"
    %span.form-arbitrary 任意
    =a.text_field :phone_number_sub, class:"input-phone-number", placeholder:"例) 09012345678"
    = render partial: 'shared/error_messages', locals: { resource: @user.address, attr: :phone_number_sub }
  .user-address__form--next
    -if request.path_info = user_payment_path
      = f.submit "次へ進む", class:"next"
    -else
      %input.next{type:"submit",value:"次へ進む"}