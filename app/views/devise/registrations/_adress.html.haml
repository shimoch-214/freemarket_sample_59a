.user-adress__form
  = form_for(@user, url: user_payment_path ,method: :get) do |f|
    = f.fields_for :adress do |a|
      .user-adress__form--name
        = a.label :last_name, "お名前", class:"name"
        %span.form-require 必須
        =a.text_field :last_name, class:"input-last-name", placeholder:"例) 山田" 
        =a.text_field :first_name, class:"input-first-name", placeholder:"例) 彩" 
      .user-adress__form--name-kana
        = a.label :last_name_kana,"お名前カナ", class:"name-kana"
        %span.form-require 必須
        =a.text_field :last_name_kana, class:"input-last-name-kana", placeholder:"例) ヤマダ" 
        =a.text_field :first_name_kana, class:"input-first-name-kana", placeholder:"例) アヤ" 
      .user-adress__form--zip-code
        = a.label :zip_code, "郵便番号", class:"zip-code"
        %span.form-require 必須
        =a.text_field :zip_code, class:"input-zip-code", placeholder:"例) 123-4567" 
      .user-adress__form--prefectures
        = a.label :prefecture, "都道府県", class:"prefectures"
        %span.form-require 必須
        = a.collection_select :prefecture_id, Prefecture.all, :id, :name, {prompt: ""}, {class: "input-Prefectures"}
        = image_tag "arrow-bottom.png", size: "16x10",class:"arrow-bottom-icon4"
      .user-adress__form--city
        = a.label :city, "市区町村", class:"city"
        %span.form-require 必須
        =a.text_field :city, class:"input-city", placeholder:"例) 横浜市緑区" 
      .user-adress__form--street-number
        = a.label :street, "番地", class:"street-number"
        %span.form-require 必須
        =a.text_field :street, class:"input-street-number", placeholder:"例) 青山1−1−1" 
      .user-adress__form--building
        = a.label :building, "建物名", class:"building"
        %span.form-arbitrary 任意
        =a.text_field :building, class:"input-building", placeholder:"例) 柳ビル103" 
      .user-adress__form--phone-number
        = a.label :phone_number_sub, "電話", class:"phone-number"
        %span.form-arbitrary 任意
        =a.text_field :phone_number_sub, class:"input-phone-number", placeholder:"例) 09012345678" 
    .user-adress__form--next
      %input.next{type:"submit",value:"次へ進む"}