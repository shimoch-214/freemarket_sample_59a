!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title FreemarketSample59a
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body

    %header.header
      .header__menu
        .header__menu--paragraph1
          .site-name
            = link_to (), class: 'site-name__logo' do
              = image_tag "header", class: 'site-name__image'
          = form_tag( '', method: :get, class: 'item-search') do
            = text_field_tag :name, '', class: 'item-search__field', placeholder: '何かお探しですか？'
            = label_tag :search do
              = fa_icon('search', class: 'item-search__submit')
            = submit_tag  '', :name => nil, class: 'item-search__submit', id: 'search'

        .header__menu--paragraph2
          .item-tag
            .item-tag__box
              = link_to (), class: 'item-tag__category--name' do
                = fa_icon('list-ul')
                カテゴリーから探す
              .item-tag__category--box
                //カテゴリーリスト追加予定
            .item-tag__box
              = link_to (), class: 'item-tag__brand--name' do
                = fa_icon('tag')
                ブランドから探す
              .item-tag__brand--box
                //ブランドリスト追加予定
          %ul.user-list
            %li.user-list__box
              = link_to (), class: 'user-list__box--link' do
                = fa_icon('heart')
                いいね一覧
              .user-list__box--box
                %ul.user-list__box--list
                  %li.user-list__box--msg
            %li.user-list__box
              = link_to (), class: 'user-list__box--link' do
                = fa_icon('bell')
                お知らせ
              .user-list__box--box
                %ul.user-list__box--list
                  %li.user-list__box--msg
            %li.user-list__box
              = link_to (), class: 'user-list__box--link' do
                = fa_icon('check')
                やることリスト
              .user-list__box--box
                %ul.user-list__box--list
                  %li.user-list__box--msg
            %li.user-list__box
              = link_to (), class: 'user-list__box--link' do
                = image_tag "member_photo_noimage_thumb.png", class: 'user-list__image'
                マイページ
              .user-list__box--box

                .profile
                  %figure.profile__image-and-user-name
                    .profile__image
                      画像
                    %figcaption.profile__name
                      名前
                  .profile__status
                    = link_to (), class: 'profile__status--name' do
                      評価数：０
                    = link_to (), class: 'profile__status--name' do
                      出品数：０
                  %ul.profile__asset
                    %li.profile__asset--box
                      = link_to (), class: 'profile__asset--link' do
                        .profile__asset--name
                          売上金
                        .profile__asset--point
                          ¥0
                    %li.profile__asset--box
                      = link_to (), class: 'profile__asset--link' do
                        .profile__asset--name
                          ポイント
                        .profile__asset--point
                          P0
                  .profile__item
                    %ul.item-status
                      %li.item-status__box
                        = link_to (), class: 'item-status__nice' do
                          いいね！一覧
                      %li.item-status__box
                        = link_to (), class: 'item-status__exhibiting' do
                          出品した商品 - 出品中
                      %li.item-status__box
                        = link_to (), class: 'item-status__transaction' do
                          出品した商品 - 取引中
                      %li.item-status__box
                        = link_to (), class: 'item-status__sold' do
                          出品した商品 - 売却済み
                      %li.item-status__box
                        = link_to (), class: 'item-status__purchased' do
                          購入した商品 - 取引中
                      %li.item-status__box
                        = link_to (), class: 'item-status__past_transactions' do
                          購入した商品 - 過去の取引

    = yield

    .go-sell
      = link_to (), class: 'go-sell__link' do
        .go-sell__box
          .go-sell__name
            出品
          = fa_icon('camera', class: 'go-sell__image')
    
    %aside.app-banner
      .app-banner__size
        .app-banner__inner
          %h2
            スマホで簡単フリマアプリ
          %p
            今すぐダウンロード！
          .app-banner__icon
            %figure.app-banner__icon--mercari
              = image_tag 'mercari_icon.png', class: 'app-banner__mercari_icon'
            %ul
              %li
                = image_tag 'app-store.svg', class: 'app-banner__app-store'
              %li
                = image_tag 'google-play.svg', class: 'app-banner__google-play'
        %figure.app-banner__app-image
          = image_tag 'download_content_pc.png', class: 'app-banner__download_content_pc'

    %footer.footer
      %nav.footer__local-nav
        .footer__sell
          %h2.footer__head
            メルカリについて
          %ul.footer__list
            %li.footer__a-list
              = link_to () do
                会社概要（運営会社）
            %li.footer__a-list
              = link_to () do
                採用情報
            %li.footer__a-list
              = link_to () do
                プレスリリース
            %li.footer__a-list
              = link_to () do
                公式ブログ
            %li.footer__a-list
              = link_to () do
                メルカリロゴ利用ガイドライン
            %li.footer__a-list--social-link
              = link_to () do
                = fa_icon('twitter')
            %li.footer__a-list--social-link
              = link_to () do
                = fa_icon('facebook-square')
        .footer__sell
          %h2.footer__head
            ヘルプ＆ガイド
          %ul.footer__list
            %li.footer__a-list
              = link_to () do
                メルカリガイド
            %li.footer__a-list
              = link_to () do
                らくらくメルカリ便
            %li.footer__a-list
              = link_to () do
                ゆうゆうメルカリ便
            %li.footer__a-list
              = link_to () do
                大型メルカリ便
            %li.footer__a-list
              = link_to () do
                車体取引ガイド
            %li.footer__a-list
              = link_to () do
                メルカリあんしん・あんぜん宣言！
            %li.footer__a-list
              = link_to () do
                偽ブランド品撲滅への取り組み
            %li.footer__a-list
              = link_to () do
                メルカリボックス
        .footer__sell--width
          %h2.footer__head
            プライバシーと利用規約
          .footer__inner-sell
            %ul.footer__list
              %li.footer__a-list
                = link_to () do
                  プライバシーポリシー
              %li.footer__a-list
                = link_to () do
                  メルカリ利用規約
              %li.footer__a-list
                = link_to () do
                  あんしんスマホサポート制度に関する利用特約
              %li.footer__a-list
                = link_to () do
                  コンプライアンスポリシー
          .footer__inner-sell
            %ul.footer__list
              %li.footer__a-list
                = link_to () do
                  個人データの安全管理に係る基本方針
              %li.footer__a-list
                = link_to () do
                  特定商取引に関する表記
              %li.footer__a-list
                = link_to () do
                  資金決済法に基づく表示
              %li.footer__a-list
                = link_to () do
                  法令順守と犯罪抑止のために
        .footer__sell--long
          %h2.footer__head
            国
          %ul.footer__list
            %li.footer__a-list
              = link_to () do
                日本
            %li.footer__a-list
              = link_to () do
                United States

      .footer__paragraph
        = link_to (), class: 'footer__logo' do
          = image_tag 'logo-white.svg'
        %span.footer__copyright
          %small
            © 2019 Mercari