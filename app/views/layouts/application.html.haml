!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title FreemarketSample59a
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body

    %header.header
      .header__menu
        .header__menu--paragraph1
          .site-name
            = link_to (), class: 'site-name__logo' do
              = image_tag "header", class: 'site-name__image'
          = form_tag( '', method: :get, class: 'item-search') do
            = text_field_tag :name, '', class: 'item-search__field', placeholder: '何かお探しですか？'
            = submit_tag  '検索', :name => nil, class: 'item-search__submit'
        .header__menu--paragraph2
          .item-tag
            .item-tag__box
              = link_to (), class: 'item-tag__category--name' do
                カテゴリーから探す
              .item-tag__category--box
                //カテゴリーリスト追加予定
            .item-tag__box
              = link_to (), class: 'item-tag__brand--name' do
                ブランドから探す
              .item-tag__brand--box
                //ブランドリスト追加予定

          %ul.user-list
            %li.user-list__box
              = link_to (), class: 'user-list__box--link' do
                0
                いいね一覧
              .user-list__box--box
                %ul.user-list__box--list
                  %li.user-list__box--msg
            %li.user-list__box
              = link_to (), class: 'user-list__box--link' do
                鈴
                お知らせ
              .user-list__box--box
                %ul.user-list__box--list
                  %li.user-list__box--msg
            %li.user-list__box
              = link_to (), class: 'user-list__box--link' do
                レ
                やることリスト
              .user-list__box--box
                %ul.user-list__box--list
                  %li.user-list__box--msg
            %li.user-list__box
              = link_to (), class: 'user-list__box--link' do
                顔
                マイページ
              .user-list__box--box

                .profile
                  %figure.profile__image-and-user-name
                    .profile__image
                      画像
                    %figcaption.profile__name
                      名前
                  .profile__status
                    = link_to (), class: 'profile__status--name' do
                      評価数：０
                    = link_to (), class: 'profile__status--name' do
                      出品数：０
                  %ul.profile__asset
                    %li.profile__asset--box
                      = link_to (), class: 'profile__asset--link' do
                        .profile__asset--name
                          売上金
                        .profile__asset--point
                          ¥0
                    %li.profile__asset--box
                      = link_to (), class: 'profile__asset--link' do
                        .profile__asset--name
                          ポイント
                        .profile__asset--point
                          P0
                  .profile__item
                    %ul.item-status
                      %li.item-status__box
                        = link_to (), class: 'item-status__nice' do
                          いいね！一覧
                      %li.item-status__box
                        = link_to (), class: 'item-status__exhibiting' do
                          出品した商品 - 出品中
                      %li.item-status__box
                        = link_to (), class: 'item-status__transaction' do
                          出品した商品 - 取引中
                      %li.item-status__box
                        = link_to (), class: 'item-status__sold' do
                          出品した商品 - 売却済み
                      %li.item-status__box
                        = link_to (), class: 'item-status__purchased' do
                          購入した商品 - 取引中
                      %li.item-status__box
                        = link_to (), class: 'item-status__past_transactions' do
                          購入した商品 - 過去の取引

    = yield

    .go-sell
      = link_to (), class: 'go-sell__link' do
        .go-sell__box
          .go-sell__name
            出品
          = image_tag "camera", class: 'go-sell__image'

    %footer.footer
      .footer__paragraph1
        mercari

